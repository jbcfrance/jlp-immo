    <script src="{{ asset('bundles/jlpfront/plugins/smoothScroll.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/jlpfront/plugins/cube-portfolio/cubeportfolio/js/jquery.cubeportfolio.min.js') }}"></script>
{% endblock %}

